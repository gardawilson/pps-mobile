<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pps_mobile">

    <!-- === PERMISSIONS === -->

    <!-- Untuk akses kamera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Untuk akses lokasi presisi -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Untuk Android 13+ (API 33 ke atas) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <!-- Untuk Android 12 ke bawah (API 32 ke bawah) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>

    <!-- Untuk merekam audio -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Untuk akses jaringan (required untuk smb_connect) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Jika ingin instal APK dari dalam aplikasi -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!-- === APPLICATION === -->
    <application
        android:label="PPS Mobile"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema default sebelum Flutter dimuat -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Wajib untuk integrasi plugin Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Untuk plugin teks (ProcessText) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
